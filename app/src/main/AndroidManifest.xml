<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Gerekli izinler -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />

    <application
        android:name="com.talhadev.zamankumandasi.ZamanKumandasiApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.ZamanKumandasi"
        tools:targetApi="31">
        
        <!-- AdMob App ID - Gerçek ID ile değiştirildi -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-2463753967736908~1434575327" />
        
        <activity
            android:name="com.talhadev.zamankumandasi.ui.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ZamanKumandasi">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Usage Access izni için activity -->
        <activity
            android:name="com.talhadev.zamankumandasi.ui.UsageAccessActivity"
            android:exported="false"
            android:theme="@style/Theme.ZamanKumandasi" />

        <!-- Bloklama ekranı -->
        <activity
            android:name="com.talhadev.zamankumandasi.ui.BlockerActivity"
            android:exported="false"
            android:excludeFromRecents="true"
            android:taskAffinity=""
            android:theme="@style/Theme.ZamanKumandasi" />

        <!-- Foreground Service -->
        <service
            android:name="com.talhadev.zamankumandasi.service.AppUsageService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="specialUse" />

        <!-- Resolve AD_SERVICES_CONFIG manifest merge conflict between Ads and Firebase Measurement -->
        <property
            android:name="android.adservices.AD_SERVICES_CONFIG"
            android:resource="@xml/gma_ad_services_config"
            tools:replace="android:resource" />

    </application>

</manifest>