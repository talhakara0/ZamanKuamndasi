<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Gerekli izinler -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.REORDER_TASKS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />

    <application
        android:name="com.talhadev.zamankumandasi.ZamanKumandasiApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.ZamanKumandasi"
        tools:targetApi="31">
        
        <!-- AdMob App ID - Gerçek ID ile değiştirildi -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-2463753967736908~1434575327" />
        
        <!-- Play Store için meta-data -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        
        <!-- Uygulama kategorisi -->
        <meta-data
            android:name="android.app.category"
            android:value="EDUCATION" />
        
        <!-- Destek bilgileri -->
        <meta-data
            android:name="android.support.PRIVACY_POLICY_URL"
            android:value="@string/privacy_policy_url" />
        
        <meta-data
            android:name="android.support.SUPPORT_EMAIL"
            android:value="@string/support_email" />
        
        <activity
            android:name="com.talhadev.zamankumandasi.ui.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ZamanKumandasi">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Usage Access izni için activity -->
        <activity
            android:name="com.talhadev.zamankumandasi.ui.UsageAccessActivity"
            android:exported="false"
            android:theme="@style/Theme.ZamanKumandasi" />

        <!-- Bloklama ekranı -->
        <activity
            android:name="com.talhadev.zamankumandasi.ui.BlockerActivity"
            android:exported="false"
            android:excludeFromRecents="true"
            android:taskAffinity=""
            android:theme="@style/Theme.ZamanKumandasi" />

            <!-- Foreground Service -->
    <service
        android:name="com.talhadev.zamankumandasi.service.AppUsageService"
        android:enabled="true"
        android:exported="false"
        android:foregroundServiceType="specialUse" />

    <!-- Overlay Blocker Service -->
    <service
        android:name="com.talhadev.zamankumandasi.service.OverlayBlockerService"
        android:enabled="true"
        android:exported="false" />

    <!-- Anti Bypass Service - En agresif koruma -->
    <service
        android:name="com.talhadev.zamankumandasi.service.AntiBypassService"
        android:enabled="true"
        android:exported="false" />

    <!-- Nuclear Bomb Service - NÜKLEER SEVİYE KORUMA -->
    <service
        android:name="com.talhadev.zamankumandasi.service.NuclearBombService"
        android:enabled="true"
        android:exported="false" />

    <!-- Ultimate Blocker Accessibility Service - %100 KESİN ÇÖZÜM -->
    <service
        android:name="com.talhadev.zamankumandasi.service.UltimateBlockerAccessibilityService"
        android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
        android:enabled="true"
        android:exported="false">
        <intent-filter>
            <action android:name="android.accessibilityservice.AccessibilityService" />
        </intent-filter>
        <meta-data
            android:name="android.accessibilityservice"
            android:resource="@xml/ultimate_accessibility_service_config" />
    </service>



        <!-- Resolve AD_SERVICES_CONFIG manifest merge conflict between Ads and Firebase Measurement -->
        <property
            android:name="android.adservices.AD_SERVICES_CONFIG"
            android:resource="@xml/gma_ad_services_config"
            tools:replace="android:resource" />

    </application>

</manifest>