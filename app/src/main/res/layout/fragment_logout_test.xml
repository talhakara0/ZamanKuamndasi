<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout Test Ekranı"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Durum: Bilinmiyor"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:background="#F0F0F0" />

    <Button
        android:id="@+id/btn_normal_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Normal Çıkış (Onay ile)"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btn_quick_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hızlı Çıkış (Onaysız)"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bu ekran logout sistemini test etmek için oluşturulmuştur."
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:alpha="0.7" />

</LinearLayout>
